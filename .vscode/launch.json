{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Laravel Server (Port 8000)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/artisan",
            "args": [
                "serve",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "APP_ENV": "local",
                "APP_DEBUG": "true"
            },
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Server running on \\[(.*)\\]",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "PHP Xdebug Listen",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "${workspaceFolder}": "${workspaceFolder}"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        },
        {
            "name": "Laravel with Xdebug (Port 8000)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/artisan",
            "args": [
                "serve",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-dxdebug.client_port=9003"
            ],
            "env": {
                "APP_ENV": "local",
                "APP_DEBUG": "true",
                "XDEBUG_CONFIG": "client_host=127.0.0.1 client_port=9003"
            },
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Server running on \\[(.*)\\]",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "pathMappings": {
                "${workspaceFolder}": "${workspaceFolder}"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ],
    "compounds": [
        {
            "name": "ðŸš€ Laravel + Edge Browser",
            "configurations": [],
            "preLaunchTask": "Laravel Serve",
            "postDebugTask": "open-edge-8777"
        }
    ]
}
