{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-php",
            "type": "shell",
            "command": "php",
            "args": ["--version"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "open-edge-8000",
            "type": "shell",
            "command": "sleep 3 && microsoft-edge http://localhost:8000",
            "group": "test",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "open-in-edge",
            "type": "shell",
            "command": "sleep 2 && microsoft-edge http://localhost:8000",
            "group": "test",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Laravel Serve",
            "type": "shell",
            "command": "php",
            "args": [
                "artisan",
                "serve",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "laravel",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Laravel development server started.*",
                    "endsPattern": "^.*Server running on.*"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "Stop Laravel Server",
            "type": "shell",
            "command": "pkill",
            "args": ["-f", "php artisan serve"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
